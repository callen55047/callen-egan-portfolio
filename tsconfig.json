{
  "compilerOptions": {
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "esnext",
    "jsx": "react",
    "types": [
      "react",
      "jest",
      "node"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "src",
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ],
    "strictNullChecks": true,
    "allowJs": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src"]
}